{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "noEmit": false,
  },
  "include": [
    "src/**/*",
    "src/types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
